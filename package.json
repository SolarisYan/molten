{
  "name": "molten",
  "version": "0.0.1",
  "description": "Molten is a Salt Web API UI written in React. ",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/martinhoefling/molten.git"
  },
  "scripts": {
    "test": "NODE_PATH='./app' jest --verbose",
    "build-dev": "webpack --progress --profile --colors",
    "watch": "webpack --progress --profile --colors --watch",
    "build": "webpack --optimize-minimize --optimize-occurence-order --optimize-dedupe --progress --profile --colors",
    "start": "npm run serve | npm run dev",
    "serve": "./node_modules/.bin/http-server -p 8080",
    "dev": "webpack-dev-server --progress --colors --port 8090",
    "eslint": "eslint --ext .jsx --ext .js app",
    "jscs": "jscs app",
    "lint": "npm run jscs && npm run eslint"
  },
  "author": "Martin Hoefling",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.1.2",
    "fluxxor": "^1.7.3",
    "lodash": "^3.9.3",
    "material-ui": "^0.11.0",
    "moment": "^2.10.6",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "react-tap-event-plugin": "^0.1.7",
    "superagent": "^1.2.0"
  },
  "devDependencies": {
    "babel-core": "^5.4.7",
    "babel-eslint": "^4.1.1",
    "babel-jest": "^5.3.0",
    "babel-loader": "^5.1.3",
    "css-loader": "^0.18.0",
    "eslint": "^1.2.1",
    "eslint-plugin-react": "^3.3.1",
    "esprima-fb": "^15001.1001.0-dev-harmony-fb",
    "extract-text-webpack-plugin": "^0.8.2",
    "http-server": "^0.8.0",
    "jest-cli": "^0.5.1",
    "jscs": "^2.1.1",
    "less": "^2.5.1",
    "less-loader": "^2.2.0",
    "node-libs-browser": "^0.5.2",
    "style-loader": "^0.12.3",
    "underscore.string": "^3.2.2",
    "webpack": "^1.12.1",
    "webpack-dev-server": "^1.9.0"
  },
  "jest": {
      "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
      "unmockedModulePathPatterns": [
          "<rootDir>/node_modules/react"
      ],
      "moduleFileExtensions": [
          "js",
          "json",
          "jsx"
      ],
      "testFileExtensions": [
          "js",
          "jsx"
      ],
      "testDirectoryName": "app",
      "testPathDirs": [
          "<rootDir>/tests/"
      ]
  }
}
